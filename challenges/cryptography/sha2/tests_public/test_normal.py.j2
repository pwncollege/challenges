#!/usr/bin/env python3

import subprocess
import time

proc = subprocess.Popen(
    ["/challenge/crypto.py"],
    stdin=subprocess.PIPE,
    stdout=subprocess.PIPE,
    stderr=subprocess.PIPE,
    text=True,
)

output = proc.stdout.readline()
assert "challenge (b64)" in output

proc.stdin.write("AAAA\n")
proc.stdin.flush()

proc.communicate(timeout=2)
